#include <iostream>
#include <cassert>
#include <string>
#include "any.h"

using utils::any;
using std::string;
using std::cout;
using std::endl;
using std::cerr;


void construct_test() {
    // value construction
    any a(42);
    any b(42.0);
    any c("42");

    string str = "You!";
    any d(str);

    // copy construction
    any x(d);

    // empty
    any emp;
    assert(emp.empty());
}

void assignment_test() {
    any a(42);
    any b(50);
    a = b;
    b = a;
    any c = "string";
    a = b = c;

    int v = 100;
    a = v;
    b = 123.0;
    c = "new string";
}


int main() {
    construct_test();
    assignment_test();
    return 0;
}